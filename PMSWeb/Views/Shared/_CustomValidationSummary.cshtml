@model ModelStateDictionary

@if (!Model.IsValid)
{
    <div class="text-danger">
        <table>

            @foreach (var modelError in
                     Model.SelectMany(keyValuePair => keyValuePair.Value.Errors))
            {
            <tr>
                <td>@modelError.ErrorMessage</td>
            </tr>
            }

       </table>
    </div>
}
