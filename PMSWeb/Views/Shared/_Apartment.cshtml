@model ApartmentModel


<h4 class="info-text"> How much your APARTMENT Property is Beautiful ? </h4>
<div class="row">
    <div class="col-sm-12">
        <div class="col-sm-2">
            <div class="form-group">
                @Html.LabelFor(m => m.ApartmentType)
                @Html.DropDownListFor(m => m.ApartmentType, EnumHelper.GetSelectList(typeof(ApartmentTypeClassifier)), "-Apartment type-", new { @class = "selectpicker show-tick form-control", required = "required" })
            </div>
        </div>
