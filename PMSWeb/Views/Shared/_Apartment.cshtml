            <div class="form-group">
                @Html.LabelFor(m => m.FloorNumberApartment)
                @Html.DropDownListFor(m => m.FloorNumberApartment,
               Enumerable.Range(1, 18).Select(i => new SelectListItem { Text = i.ToString(),
                   Value = i.ToString() }), new { placeholder = Html.DisplayNameFor(x => x.FloorNumberApartment), @class = " selectpicker show-tick form-control", @required = "required"})
            </div>
        </div>
